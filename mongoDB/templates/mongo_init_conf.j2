# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: {{ mongo_systemlog_path }}

# Where and how to store data.
storage:
  dbPath: {{ mongo_db_path }}

# network interfaces
net:
  port: {{ mongo_port }}
  bindIp: 0.0.0.0